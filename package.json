  "devDependencies": {
    "@types/node": "17.0.8",
    "@types/react": "17.0.38",
    "eslint": "8.7.0",
    "eslint-config-next": "12.0.8",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "npm-run-all": "^4.1.5",
